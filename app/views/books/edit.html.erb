<h1>Editing Book</h1>

<%= form_with model: @book, url:book_path(@book.id), method: :patch do |f| %>

  <div class="field">
    <div>Title</div>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <div>Body</div>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>

<% end %>

<%= link_to "Show", book_path(@book.id) %>
